
<div class="page-header">
	<h1>Problems</h1>
</div>

<table class="table table-striped">
  <thead>
  	<tr>
  		<th>Problem ID</th>
  		<th>Title</th>
  		<th>Info</th>
  		<th>AC</th>
  		<th>Submit</th>
  		<th>Ratio</th>
  	</tr>
  </thead>
  <tbody>
  	<% @problems.each do |problem| %>
  		<tr>
  			<td><%= problem.id %></td>
  			<td><%= link_to problem.title, problem_path(problem)%></td>
  			<td></td>
  			<td></td>
  			<td></td>
  			<td></td>
  		</tr>
  	<% end %>
  </tbody>
</table>

<ul class="pagination">
  <li><a href="/problems">&laquo;</a></li>
  <% num = @problems.total_pages %>
  <% (1..num).each do |i| %>
    <li><a href="/problems/<%= i %>"><%= i %></a></li>
  <% end %>
  <li><a href="/problems/<%= num %>">&raquo;</a></li>
</ul>